    <%= f.select(:year) do %>
          <% [['2010',2010],['2011',2011],['2012',2012],['2013',2013],['2014',2014],['2015',2015],['2016',2016],['2017',2017],['2018',2018],['2019',2019],['2020', 2020]].each do |y| -%>
              <%= content_tag(:option, y.first, value: y.last) %>
          <% end %>
    <% end %>
  </div>
